<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Search Results</title>
</head>
<body>
  <h1>Search Results for '<%= keyword %>'</h1>
  <form action="/index" method="get">
    <button type="submit">Return to Search</button>
  </form>

  <% if (postgresResults.length === 0 && mongodbResults.length === 0) { %>
    <p>No results found.</p>
  <% } else { %>

  <% if (postgresResults.length > 0) { %>
    <h2>PostgreSQL Results</h2>
    <ul>
      <% postgresResults.forEach(result => { %>
        <li><%= result.title %></li>
        <!-- Adjust this line based on your result object -->
      <% }); %>
    </ul>
  <% } %>

  <% if (mongodbResults.length > 0) { %>
    <h2>MongoDB Results</h2>
    <ul>
      <% mongodbResults.forEach(result => { %>
        <li><%= result.title %></li>
        <!-- Adjust this line based on your MongoDB result object -->
      <% }); %>
    </ul>
  <% } %>

  <% } %>
</body>
</html>
