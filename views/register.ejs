<div
  style="
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    background-image: linear-gradient(to bottom right,  #5dabff, #e6f2fe)
  "
>
  <div
    style="
      background-color: #fff;
      border-radius: 5px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      padding: 20px;
      width: 300px;
      text-align: center;
    "
  >
    <h1>Welcome to BookFinder.keyin</h1>
    <h4>Please register</h4>
    <% if (messages.error) { %> <%= messages.error %> <% } %>
    <form action="/register" method="POST">
      <div style="margin-bottom: 10px">
        <label for="name">Name</label>
        <input
          type="text"
          id="name"
          name="name"
          required
          style="
            width: 100%;
            padding: 8px;
            border-radius: 3px;
            border: 1px solid #ccc;
          "
        />
        <label for="email">Email</label>
        <input
          type="email"
          id="email"
          name="email"
          required
          style="
            width: 100%;
            padding: 8px;
            border-radius: 3px;
            border: 1px solid #ccc;
          "
        />
      </div>
      <div style="margin-bottom: 10px">
        <label for="password">Password</label>
        <input
          type="password"
          id="password"
          name="password"
          required
          style="
            width: 100%;
            padding: 8px;
            border-radius: 3px;
            border: 1px solid #ccc;
          "
        />
      </div>
      <!-- Additional fields for registration, such as username, password confirmation, etc., can be added here -->
      <button
        type="submit"
        style="
          width: 100%;
          padding: 8px;
          border-radius: 3px;
          border: none;
          background-color: #007bff;
          color: white;
          cursor: pointer;
        "
      >
        Register
      </button>
    </form>
    <a
      href="/login"
      style="
        display: block;
        text-align: center;
        text-decoration: none;
        color: #007bff;
        margin-top: 10px;
      "
      >âž¤ Back to Login</a
    >
  </div>
</div>
